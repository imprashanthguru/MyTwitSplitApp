<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<LinearLayout

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<ImageView

    android:layout_margin="5dp"
    android:src="@drawable/zalora_icon"
    android:layout_width="match_parent"
    android:layout_height="100dp" />


<TextView
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="Choose your desired place"
    />


<HorizontalScrollView
    

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            android:tag="Singapore"
            android:id="@+id/singapore_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:elevation="5dp"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            
            <com.pkmmte.view.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/singapore_icon"
                />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Singapore"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>
            
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:tag="Philippines"
            android:id="@+id/philippines_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/philippines_icon"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Philippines"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:tag="Hong Kong"
            android:id="@+id/hong_kong_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/hong_kong_icon"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hong Kong"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:tag="Indonasia"
            android:id="@+id/indonesia_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/indonesia_icon"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indonesia"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:tag="Malaysia"
            android:id="@+id/malaysia_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/malaysia_icon"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malaysia"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:tag="Brunei"
            android:id="@+id/brunei_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/brunei_icon"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brunei"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:tag="Taiwan"
            android:id="@+id/taiwan_card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.pkmmte.view.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/taiwan_icon"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taiwan"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</HorizontalScrollView>



    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="35dp"
            android:elevation="15dp"
            >


            <LinearLayout

                android:textAlignment="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                     android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/place_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />


                    <TextView
                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Place                  : "

                        />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/place_name_contact_us_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/website_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />


                    <TextView
                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Website              : "

                        />

                    <TextView
                        android:textSize="15sp"
                        android:textAlignment="gravity"
                        android:id="@+id/website_name_contact_us_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/customer_care_mail_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Customer Care : "

                        />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/customer_care_contact_us_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/phone_number_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />


                    <TextView
                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Phone Number : "

                        />

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/phone_number_contact_us_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="SOCIAL MEDIA"
        android:textStyle="bold"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"

        >

      <com.pkmmte.view.CircularImageView
           android:layout_marginEnd="15dp"
          android:id="@+id/facebook_image_view_id"
          android:src="@drawable/facebook_icon"
          android:layout_width="0dp"
          android:layout_height="80dp"
          android:layout_weight="1" />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/instagram_image_view_id"
            android:src="@drawable/instagram_icon"
            android:layout_marginEnd="15dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/twitter_image_view_id"
            android:src="@drawable/twitter_icon"
            android:layout_marginEnd="12dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/youtube_image_view_id"
            android:src="@drawable/youtube_icon"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            />


    </LinearLayout>


</LinearLayout>



</LinearLayout>


</ScrollView>