<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"
        card_view:cardCornerRadius="35dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:id="@+id/background_image_view_id"
                android:src="@drawable/zalora_about_icon"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="#ef2f2f"
                android:id="@+id/view" />


            <com.pkmmte.view.CircularImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:id="@+id/zalora_about_circular_image_id"
                android:src="@drawable/zalora_icon"
                app:border="true"
                app:border_color="#F0A830"
                android:layout_marginStart="22dp"

               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textColor="#fff"
                android:textSize="16sp"
                android:id="@+id/textView"
                android:layout_below="@+id/background_image_view_id"
                android:layout_toRightOf="@+id/zalora_about_circular_image_id"
                android:layout_toEndOf="@+id/zalora_about_circular_image_id"
                 android:layout_marginStart="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_zalora"
                android:textSize="13sp"
                android:paddingRight="15dp"
                android:textColor="#fff"
                android:id="@+id/textView2"

                android:layout_alignStart="@+id/textView"

                android:layout_below="@+id/textView" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>


</ScrollView>
































